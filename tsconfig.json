{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "allowJs": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "types": ["@types/node", "@types/jest", "@nuxt/types", "@types/shopify-buy"]
  },
  "include": ["src/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
